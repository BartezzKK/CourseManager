@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    @{
        ViewBag.Title = "List of roles";
    }


<h1>Available roles</h1>
<a asp-area="" asp-controller="Administration" asp-action="CreateRole">Create New Role</a>
@if(Model.Any())
{
    foreach(IdentityRole role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@role.Id">Add user to role</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles
        </div>
        <div class="card-body">
            <h1 class="card-title">
                Click here to create role
            </h1>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="CreateRole">
                Create role
            </a>
        </div>
    </div>
}